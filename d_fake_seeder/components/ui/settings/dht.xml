                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Enable DHT</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                        </object>
                                    </child>
                                </object>
                            </child>
                        </object>
                    </child>
                </object>
            </child>

